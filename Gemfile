source "https://rubygems.org"

ruby "3.3.7"

# Rails itself
gem "rails", "~> 8.0.2"

# Database
gem "sqlite3", "~> 2.1"

# Web server
gem "puma", "~> 6.0"
gem "propshaft"

# Asset pipeline
gem "sprockets-rails"

# JavaScript
gem "importmap-rails"
gem "stimulus-rails"

# Reduces boot times through caching
gem "bootsnap", require: false

group :development, :test do
  gem "debug", platforms: %i[ mri mingw x64_mingw ]
end

group :development do
  gem "web-console"
end